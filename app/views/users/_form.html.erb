<%= form_for @user, html: {class: "col-md-4"} do |f| %>

   <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
   </div>

   <div class="form-group">
      <%= f.label :height %>
      <%= f.text_field :height, class: "form-control" %>
   </div>

   <div class="form-group">
      <%= f.label :happiness %>
      <%= f.text_field :happiness, class: "form-control" %>
   </div>

   <div class="form-group">
      <%= f.label :nausea %>
      <%= f.text_field :nausea, class: "form-control" %>
   </div>
   
   <div class="form-group">
      <%= f.label :tickets %>
      <%= f.text_field :tickets, class: "form-control" %>
   </div>

   <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
   </div>

   <div class="form-group">
      <%= f.label :admin %>
      <%= f.check_box :admin, class: "form-check-input" %>
   </div>

   <%= f.submit class: "btn btn-primary" %>   

<% end %>