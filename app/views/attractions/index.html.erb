<h1>Attractions</h1>

<% @attractions.each do |attraction| %>
   <% if current_user.admin %>
      <ul>
         <li><%= link_to 'Show ' + attraction.name, attraction_path(attraction) %></li>  
      </ul> 
   <% else %>
      <h2><%= link_to 'Go on ' + attraction.name, attraction_path(attraction) %></h2>
   <% end %>
<% end %>

<% if current_user.admin %>
   <%= link_to 'Create a New Attraction', new_attraction_path, class: "btn btn-primary" %>
<% end %>
