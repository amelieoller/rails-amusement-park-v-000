<%= form_for @attraction, html: {class: "col-md-4"} do |f| %>

   <% if @attraction.errors.any? %>
      <h2>There were some errors:</h2>
      <ul>
         <% @attraction.errors.full_messages.each do |message| %>
            <li><%= message %></li>
         <% end %>
      </ul>
   <% end %>

   <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
   </div>

   <div class="form-group">
      <%= f.label :min_height %>
      <%= f.text_field :min_height, class: "form-control" %>
   </div>

   <div class="form-group">
      <%= f.label :happiness_rating %>
      <%= f.text_field :happiness_rating, class: "form-control" %>
      <small class="form-text text-muted">Must be between 1 and 10</small>            
   </div>

   <div class="form-group">
      <%= f.label :nausea_rating %>
      <%= f.text_field :nausea_rating, class: "form-control" %>
      <small class="form-text text-muted">Must be between 1 and 10</small>            
   </div>

   <div class="form-group">
      <%= f.label :tickets %>
      <%= f.text_field :tickets, class: "form-control" %>
      <small class="form-text text-muted">Must be between 1 and 10</small>            
   </div>

   <%= f.submit class: "btn btn-primary" %>
   
<% end %>